
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
@section dashboardJS
{
    <script src="~/Scripts/api-hanh-chinh-vn-dashboard.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/datatables.net-buttons/2.0.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.html5.min.js"></script>
    <script src="~/Scripts/thong-ke.js"></script>
}
<link href="https://cdn.datatables.net/buttons/2.0.1/css/buttons.dataTables.min.css" rel="stylesheet" />
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <h3 class="tile-title">Thống kê theo từng vắc xin</h3>
            <div class="row">
                <div class="col-md-12">
                    <label class="font-weight-bold">Thời gian tiêm</label>
                </div>
                <div class="col-md-12 d-inline-flex row">
                    <div class="form-group col-md-3">
                        <label>Từ ngày</label>
                        <input class="form-control" type="date" id="dateFrom" />
                    </div>
                    <div class="form-group col-md-3">
                        <label>Đến ngày</label>
                        <input class="form-control" type="date" id="dateTo" />
                    </div>
                </div>
            </div>
            <div class="col-md-12 text-center">
                <button class="btn btn-primary" type="button" id="btnSearch">Thống kê</button>
            </div>
            <div class="row col-md-12 mt-4">
                <table class="table table-hover table-bordered custom-table" id="tblResult">
                    <thead>
                        <tr>
                            <th>Tên vắc xin</th>
                            <th>Số mũi tiêm</th>
                            <th>Số lượng đã tiêm</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="tile">
            <div class="row">
                <div class="col-md-12">
                    <h3 class="tile-title">Thống kê theo từng điểm tiêm chủng</h3>
                    <div class="row">
                        <div class="col-md-12">
                            <label class="font-weight-bold">Thời gian tiêm</label>
                        </div>
                        <div class="col-md-12 d-inline-flex row">
                            <div class="form-group col-md-3">
                                <label>Từ ngày</label>
                                <input class="form-control" type="date" id="dateFrom2" />
                            </div>
                            <div class="form-group col-md-3">
                                <label>Đến ngày</label>
                                <input class="form-control" type="date" id="dateTo2" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="font-weight-bold col-md-12">Địa chỉ điểm tiêm</label>
                        <div class="col-md-12 d-inline-flex flex-wrap">
                            <select id="ddlTinhThanhPho" class="form-control col-md-3">
                            </select>
                            <select id="ddlQuanHuyen" class="form-control col-md-3" disabled>
                            </select>
                            <select id="ddlPhuongXa" class="form-control col-md-3" disabled>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-12 text-center">
                        <button class="btn btn-primary" type="button" id="btnSearch2">Thống kê</button>
                    </div>
                    <div class="row col-md-12 mt-4">
                        <table class="table table-hover table-bordered custom-table" id="tblResult2">
                            <thead>
                                <tr>
                                    <th>Tên điểm tiêm chủng</th>
                                    <th>Địa chỉ</th>
                                    <th>Số lượng đã tiêm</th>
                                    <th>Số lượng vắc xin còn lại</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
