@using ECOVAX.Providers
@{
    ViewBag.Title = "Tra cứu tình trạng giấy đăng ký - " + @Constant.PAGE_TITLE;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/tra-cuu.js"></script>

<nav aria-label="breadcrumb">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h4 class="text-uppercase">Tra cứu giấy đăng ký</h4>
        <ol class="breadcrumb bg-white pr-0">
            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
            <li class="breadcrumb-item active" aria-current="page">Tra cứu giấy đăng ký</li>
        </ol>
    </div>
</nav>
<div class="container-fluid">
    <form id="formTraCuu">
        <div class="row justify-content-center">
            <div class="col-md-3 mt-1">
                <span class="required mr-2">CMND/CCCD người tiêm</span>
                <input type="text" class="form-control w-100 mw-100" id="txtCMND" name="txtCMND" maxlength="12" />
            </div>
            <div class="col-md-3 mt-1">
                <span class="required mr-2">SĐT người liên hệ/ đăng ký tiêm</span>
                <input type="text" class="form-control w-100 mw-100" id="txtSDT" name="txtSDT" maxlength="10" />
            </div>
        </div>
        <div class="row justify-content-center mt-4">
            <button class="btn submit-form-btn btn-submit" id="btnTraCuuGDK" type="button">Tra cứu</button>
        </div>
    </form>
    <div class="row justify-content-center">
        <p class="text-danger">(Lưu ý, với những đơn được xác nhận, anh/chị hãy in bấm in và mang theo đến điểm tiêm)</p>
        <div class="col-md-10 mt-4">
            <table class="table table-bordered table-hover d-none" id="tblResult">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Người liên hệ</th>
                        <th>SĐT người liên hệ</th>
                        <th>Người tiêm</th>
                        <th>Thời gian đăng ký</th>
                        <th>Địa điểm tiêm</th>
                        <th>Ngày tiêm</th>
                        <th>Buổi tiêm</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
            <h5 class="d-none mt-4 w-100 text-center" id="lblEmpty">Không tìm thấy bản ghi nào</h5>
        </div>
    </div>
</div>

